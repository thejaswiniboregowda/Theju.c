#include<stdio.h>
int passed(int m1,int m2,int m3 ){
    if (m1>=40 && m2>=40 && m3>=40)
    printf("passed");
    else
    printf("failed");
}
int main(){
    int sub1,sub2,sub3;
    float average;
    printf("marks for three subject\n");
    printf("subject 1:");
    scanf("%d",&sub1);
    printf("subject 2:");
    scanf("%d",&sub2);
    printf("subject 3:");
    scanf("%d",&sub3);
    average=(sub1 + sub2 + sub3)/3.0;
    printf("%.2f\n", average);
if(passed(sub1, sub2, sub3))
    printf("result:pass\n");
else
    printf("result:fail\n");


