#include<stdio.h>
int main() {
    float P,T,R,si;
    printf("Enter  Principle (P):");
    scanf("%f", &P);
    printf("Enter  Time(T in years):");
    scanf("%f", &T);
    printf("Enter Rate of interest(R):");
    scanf("%f", &R);
    si=P*T*R/100;
    printf("simple interest =%f\n");
    return 0;
}
